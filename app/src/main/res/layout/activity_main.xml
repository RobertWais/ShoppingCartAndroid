<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context="com.example.robertwais.shoppingcart.MainActivity">

    <TextView
        android:id="@+id/welcometextview"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:gravity="center"
        android:text="@string/welcomeMessage"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="102dp"
        android:layout_height="63dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/logInButtonLabel"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/welcometextview"
        app:layout_constraintStart_toStartOf="@+id/welcometextview"
        app:layout_constraintTop_toBottomOf="@+id/welcometextview" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="104dp"
        android:layout_height="68dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/signUpButtonLabel"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/welcometextview"
        app:layout_constraintStart_toStartOf="@+id/welcometextview"
        app:layout_constraintTop_toBottomOf="@+id/loginbutton" />

    <Button
        android:id="@+id/guestbutton"
        android:layout_width="168dp"
        android:layout_height="70dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/guestButtonLabel"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/welcometextview"
        app:layout_constraintStart_toStartOf="@+id/welcometextview"
        app:layout_constraintTop_toBottomOf="@+id/signupbutton" />

    <Button
        android:id="@+id/helpbutton"
        android:layout_width="225dp"
        android:layout_height="49dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/helpButtonLabel"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/guestbutton"
        app:layout_constraintStart_toStartOf="@+id/guestbutton"
        app:layout_constraintTop_toBottomOf="@+id/guestbutton" />

</android.support.constraint.ConstraintLayout>
